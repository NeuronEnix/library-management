<html>
    <title>LMS - Add Book</title>
    <body>
      <%- include("../partials/navbar") %>

      <%- include("../partials/popup" ) %>

        <form action="/book/add" method="post" >

          <div class="add-book-component" style="margin-left: 2%">

            <!-- First Row: Book Title-->
            <div class="form-row" >

              <!-- Book Title -->
              <div class="form-group col-md-6" >
                <%- include( "../partials/inputField", {
                  labelName: 'Book Title',
                  name:"title",
                  type:"text"
                } );%>
              </div>

            </div>

            <!-- Second Row: Author Name, Edition Number -->
            <div class="form-row">

              <!-- Author Name -->
              <div class="form-group col-md-3" >
                <%- include( "../partials/inputField", {
                  labelName: "Author Name",
                  name:"author",
                  type:"text"
                } );%>
              </div>

              <!-- Edition Number -->
              <div class="form-group col-md-3" >
                <%- include( "../partials/inputField", {
                  labelName: "Edition Number",
                  name:"edition",
                  type:"number"
                } );%>
              </div>
            </div>
            <!-- Third Row: Publisher Name -->
            <div class="form-row">

              <!-- Publisher Name -->
              <div class="form-group col-md-3">
                <%- include( "../partials/inputField", {
                  labelName: "Publisher Name",
                  name:"pub",
                  type:"text"
                } );%>            
              </div>
            </div>

            <!-- Fourth Row: Lend Price -->
            <div class="form-row">

              <!-- Lend Price -->
              <div class="form-group col-md-3">
                <%- include( "../partials/inputField", {
                  labelName: "Lend Price",
                  name:"lend_price",
                  type:"number"
                } );%>
              </div>

            </div>
            <div class="form-group col-md-3">
              <button class="btn btn-danger" type="button"  onclick="window.location='/book';return false;" style="margin-right: 10px;"> Cancel</button>
              <button class="btn btn-primary" type="submit" style="margin-right: 10px;"> Add Book</button>

            </div>

          </div>

          </form>
          <%- include( "../partials/setEleValByID" ) %>

    </body>
</html>