<html>
    <title>LMS - Register Book</title>
    <body>
      <%- include("../partials/navbar", { activeNav: "User" } ) %>

      <%- include("../partials/popup" ) %>

        <form action="/user/register" method="post" >

          <div class="register-user-component" style="margin-left: 2%">

            <!-- First Row: Full Name-->
            <div class="form-row" >

              <!-- Book Title -->
              <div class="form-group col-md-6" >
                <%- include( "../partials/inputField", {
                  labelName: 'Full Name',
                  name:"name",
                  type:"text"
                } );%>
              </div>

            </div>

            <!-- Second Row: Email -->
            <div class="form-row">
              <!-- Author Name -->
              <div class="form-group col-md-3" >
                <%- include( "../partials/inputField", {
                  labelName: "Email",
                  name:"email",
                  type:"text"
                } );%>
              </div>
            </div>
              
              <div class="form-row">
              <!-- Third Row: Contact Number -->
              <div class="form-group col-md-3" >
                <%- include( "../partials/inputField", {
                  labelName: "Contact Number",
                  name:"contact",
                  type:"number"
                } );%>
              </div>
            </div>

            <div class="form-group col-md-3">
              <button class="btn btn-danger" type="button"  onclick="window.location='/book';return false;" style="margin-right: 10px;"> Cancel</button>
              <button class="btn btn-primary" type="submit" style="margin-right: 10px;"> Register </button>
            </div>

          </div>

          </form>
          <%- include( "../partials/setEleValByID" ) %>

    </body>
</html>