<div class="card" style="width: 100%;">

    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Profile</h6>
    </div>

    <img src="<%= imgPath %>" class="card-img-top col-sm-8" alt="">

    <div class="card-body">
        <h5 class="card-title"> <%- include('./inputField', {
            labelName: title.label,
            name: title.name,
            type: title.type,
            disabled: title.disabled,
            value: title.value,
        } ) %> </h5>

        <div class="card" style="width: 100%;">
            <ul class="list-group list-group-flush">
                <% body.forEach( ( val ) => { %>
                    <li class="list-group-item">
                        <%- include('./inputField', {
                            labelName: val.label,
                            name: val.name,
                            type: val.type,
                            disabled: "true",
                            value: val.value,
                        } ) %>
                    </li>
                <% }) %>
            </ul>
        </div>
        <form>
            <div class="row">
                <% buttons.forEach( ( val ) => { %>
                    <div class="col" style= "width: 50%; padding:0px; margin-left: 1px;">
                        <a type="submit" class="float-right btn btn-<%= val.type %>" 
                            formaction ="<%= val.formaction %>"
                            formmethod ="<%= val.formmethod %>">
                            <%= val.label %>
                        </a>
                    </div>
                <% }) %>
            </div>
        </form>
    </div>

</div>